cmake_minimum_required(VERSION 3.1)
project(gf_library CXX)
find_package(CUDA QUIET REQUIRED)
add_library(gf STATIC F2X.cpp F2XE.cpp GF2.cpp)
target_compile_features(gf PUBLIC cxx_constexpr)
target_include_directories(gf PUBLIC ${CUDA_INCLUDE_DIRS}) 
set(CMAKE_CXX_FLAGS ${CMAKE_CXX_FLAGS} -mpclmul)
set(CMAKE_EXPORT_COMPILE_COMMANDS ON)
ADD_SUBDIRECTORY(googletest-master)
ADD_SUBDIRECTORY(Tests)
